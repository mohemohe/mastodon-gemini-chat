# Mastodon API Configuration
MASTODON_SERVER=https://mastodon.plusminus.io
MASTODON_ACCESS_TOKEN=

# LLM Provider Configuration
# Options: 'gemini' (default), 'openai', or 'anthropic'
LLM_PROVIDER=gemini

# Fallback LLM Provider Configuration
# Options: 'gemini', 'openai', 'anthropic', or leave empty to disable fallback
FALLBACK_LLM_PROVIDER=

# Gemini API Configuration
GEMINI_API_KEY=
GEMINI_MODEL=

# OpenAI Compatible API Configuration
# Used when LLM_PROVIDER=openai
OPENAI_API_KEY=
OPENAI_BASE_URL=
OPENAI_MODEL=

# Anthropic API Configuration
# Used when LLM_PROVIDER=anthropic
ANTHROPIC_API_KEY=
ANTHROPIC_BASE_URL=
ANTHROPIC_MODEL=

# System Prompt Configuration
SYSTEM_PROMPT_PATH=.systemprompt
# Fallback system prompt (used if SYSTEM_PROMPT_PATH is not available)
SYSTEM_PROMPT=

# Bot Configuration
MAX_CONTEXT_LENGTH=10 